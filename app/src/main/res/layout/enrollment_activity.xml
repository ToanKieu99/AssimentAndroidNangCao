<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#086996">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:text="Schedule"
                android:textColor="#fff"
                android:textSize="25sp" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_button"
            android:backgroundTint="#e1dede"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="Java web programming course"
                                    android:textColor="#000"
                                    android:textSize="16dp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginTop="2dp"
                                        android:text="Course price: "
                                        android:textColor="#2368d7"
                                        android:textSize="14dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginTop="2dp"
                                        android:text="200 $"
                                        android:textColor="#94080b"
                                        android:textSize="14dp" />
                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ltJavaWeb"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="end|center"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_tuy_chon_24dp"
                            tools:ignore="VectorDrawableCompat" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="PHP Programming Course"
                                    android:textColor="#000"
                                    android:textSize="16dp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginTop="2dp"
                                        android:text="Course price: "
                                        android:textColor="#2368d7"
                                        android:textSize="14dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginTop="2dp"
                                        android:text="220 $"
                                        android:textColor="#94080b"
                                        android:textSize="14dp" />
                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ltPHP"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="end|center"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_tuy_chon_24dp"
                            tools:ignore="VectorDrawableCompat" />
                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="340dp"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="Android Programming Course"
                                    android:textColor="#000"
                                    android:textSize="16dp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginTop="2dp"
                                        android:text="Course price: "
                                        android:textColor="#2368d7"
                                        android:textSize="14dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginTop="2dp"
                                        android:text="299 $"
                                        android:textColor="#94080b"
                                        android:textSize="14dp" />
                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ltAndroid"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="end|center"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_tuy_chon_24dp"
                            tools:ignore="VectorDrawableCompat" />
                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="300dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="React Native Programming Course"
                                    android:textColor="#000"
                                    android:textSize="16dp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginTop="2dp"
                                        android:text="Course price: "
                                        android:textColor="#2368d7"
                                        android:textSize="14dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginTop="2dp"
                                        android:text="250 $"
                                        android:textColor="#94080b"
                                        android:textSize="14dp" />
                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ltReactNative"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="end|center"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_tuy_chon_24dp"
                            tools:ignore="VectorDrawableCompat" />
                    </android.support.v7.widget.CardView>





                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="C# Programming Course"
                                    android:textColor="#000"
                                    android:textSize="16dp" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginTop="2dp"
                                        android:text="Course price: "
                                        android:textColor="#2368d7"
                                        android:textSize="14dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginTop="2dp"
                                        android:text="179 $"
                                        android:textColor="#94080b"
                                        android:textSize="14dp" />
                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ltC"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="end|center"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_tuy_chon_24dp"
                            tools:ignore="VectorDrawableCompat" />
                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="40dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="By toanvq with love ahiuhiu" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="http://bit.ly/2DYq2zw" />
                    </LinearLayout>
                </LinearLayout>


            </ScrollView>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>